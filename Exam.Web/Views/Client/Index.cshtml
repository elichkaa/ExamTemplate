@using Exam.ViewModels
@model List<OrderOnAllPageViewModel>
@{
    ViewData["Title"] = "Orders Page";
}
<form asp-controller="Client" asp-action="Index" enctype="multipart/form-data">
    <span>Available status messages: Waiting, To be visited, In progress, Done</span>
    <div class="input-group">
        <div class="form-outline">
            <input type="search" name="status" id="form1" placeholder="Status name" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            Filter
        </button>
    </div>
</form>

@if (Model != null && Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Edit</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].StatusName</td>

                    <td>
                        <a class="btn btn-warning" asp-controller="Client" asp-action="Edit" asp-route-orderId="@Model[i].Id">
                            Edit order
                        </a>
                    </td>
                    @if (@Model[i].StatusName == "Waiting")
                    {
                        <td>
                            <a class="btn btn-danger" asp-controller="Client" asp-action="Delete" asp-route-orderId="@Model[i].Id">
                            Remove order
                        </a>
                        </td>
                    }
                    else
                    {
                        <td>Status doesn't allow deleting.</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>You have no orders or you have entered a wrong status name.</h1>
    <div class="m-3">Try again or add new orders.</div>
}

<a class="btn btn-success" asp-controller="Client" asp-action="Add">Add order</a>

