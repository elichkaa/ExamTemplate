@using Exam.InputModels
@model EditOrderInputModel

@{
    ViewData["Title"] = "Edit order";
    var order = (OrderOnAllPageViewModel)ViewData["Filled"];
}

<div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-6">
       <form asp-controller="Client" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="input-group m-3">
            <label class="m-2" for="@Model.Name">Name</label>
            <input class="form-control" value="@order.Name" asp-for="@Model.Name">
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
            
        </div>
        <div class="input-group m-3">
            <label class="m-2" for="@Model.Description">Description</label>
            <input class="form-control" value="@order.Description" asp-for="@Model.Description">
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>
        <div class="input-group m-3">
            <label class="m-2" for="@Model.Address">Address</label>
            <input class="form-control" value="@order.Address" asp-for="@Model.Address">
            <span asp-validation-for="@Model.Address" class="text-danger"></span>
        </div>
        <div class="input-group m-3">
            <label class="m-2" for="@Model.Image">Image link</label>
            <input class="form-control" value="@order.Image" asp-for="@Model.Image">
            <span asp-validation-for="@Model.Image" class="text-danger"></span>
        </div>
        <input class="btn btn-primary separated" type="submit" value="Edit order">
    </form>
   </div>
    
</div>

