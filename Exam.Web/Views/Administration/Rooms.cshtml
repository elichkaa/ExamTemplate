@model List<RoomViewModel>

@{
    ViewData["Title"] = "Rooms administration";
}

@if (Model != null && Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Location</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Edit</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {

                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Location</td>
                    <td>@Model[i].Price</td>
                    <td>
                        <img src="@Model[i].Image">

                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Administration" asp-action="EditRoom" asp-route-roomId="@Model[i].Id">
                            Edit room
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Administration" asp-action="DeleteRoom" asp-route-roomId="@Model[i].Id">
                            Remove room
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1>No rooms in system.</h1>
}
<a class="btn btn-success mt-3" asp-controller="Administration" asp-action="AddRoom">
    Add room
</a>