@model List<OrderOnAdminPageViewModel>

@{
    ViewData["Title"] = "Orders administration";
}

<form asp-controller="Administration" asp-action="Orders" enctype="multipart/form-data">
    <div class="input-group">
        <div class="form-outline">
            <input type="search" name="username" id="form1" placeholder="Username" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">
            Filter
        </button>
    </div>
</form>

@if (Model != null && Model.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Address</th>
                <th scope="col">Status</th>
                <th scope="col">Created on</th>
                <th scope="col">Checked by Tech on</th>
                <th scope="col">Tech name</th>
                <th scope="col">Username</th>
                <th scope="col">Edit</th>
                <th scope="col">Remove</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].StatusName</td>
                    <td>@Model[i].CreatedOn</td>
                    <td>@Model[i].CheckedByTechnicianOn</td>
                    <td>@Model[i].SupervisorTechnicianName</td>
                    <td>@Model[i].Username</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Administration" asp-action="EditOrder" asp-route-id="@Model[i].Id">
                            Edit order
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Administration" asp-action="DeleteOrder" asp-route-orderId="@Model[i].Id">
                            Remove order
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>No orders in system.</h1>
}